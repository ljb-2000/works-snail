 body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,
 form,fieldset,input,textarea,p,blockquote,th,td {
 padding: 0;
 margin: 0;
 }
 table {
 border-collapse: collapse;
 border-spacing: 0;
 }
 fieldset,img {
 border: 0;
 }
 address,caption,cite,code,dfn,em,strong,th,var {
 font-weight: normal;
 font-style: normal;
 }
 ol,ul {
 list-style: none;
 }
 caption,th {
 text-align: left;
 }
 h1,h2,h3,h4,h5,h6 {
 font-weight: normal;
 font-size: 100%;
 }
 q:before,q:after {
 content:'';
 }
 abbr,acronym { border: 0;
 }

html {
	font-family: Arial, 'Microsoft YaHei', 'Source Sans Pro', Helvetica, sans-serif;
}

body {
 	background: #fff url('../img/login2.jpg') no-repeat;
 	/* background-size:cover; */
 	width: 100%;
 	height:100%;
}

input:focus {
	outline: none;
}

.wrapper {
	position: relative;
	width:1000px;
	min-width:1000px;
	margin:0 auto;
}

.login-box {
	width:1000px;
	position: absolute;
	top: 150px;
}

.logo {
	width:197px;
	margin:0 auto;
}

.login-form {
	position: relative;
	width:700px;
	height:50px;
	padding:25px 30px;
	background:#dee1e8;
	border-radius: 5px;
	margin: 50px auto 0;
}

.username, .password {
	display: inline-block;
	width: 313px;
	height: 50px;
	border-radius: 5px;
	background: #fff;
	font-size: 26px;
	padding-left:10px;
}

.password {
	margin-left:40px;
}

.login-btn {
	display: block;
	position: absolute;
	right:-70px;
	top:25px;
	width:70px;
	height:50px;
	font-size: 18px;
	line-height: 18px;
	background: #ff6600;
	border:none;
	border-radius: 0 5px 5px 0;
	color:#fff;
}

.login-btn:hover {
	cursor:pointer;
}

.login-btn:focus {
	outline: none;
}

.massage {
	text-align: center;
    margin-top: 33px;
    color: #6D1212;
}