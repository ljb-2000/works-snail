.system-box {
    width: 660px;
    position: absolute;
    left: 50%;
    top: 20%;
    margin-left: -330px;
}

.ststem-header h1 {
    position: relative;
    text-align: center;
    font-size: 29px !important;
}

.access {
    position: absolute;
    top: 7px;
    left: 0;
    font-size: 18px;
}

.exit {
    position: absolute;
    top: 7px;
    right: 0;
    font-size: 18px;
}

.modify {
    position: absolute;
    top: 7px;
    left: 50px;
    font-size: 18px;
}

.exit:hover,
.exit:active,
.exit:focus {
    text-decoration: none !important;
}

body {
	font-family: Arial, 'Microsoft YaHei', 'Source Sans Pro', Helvetica, sans-serif;
    background: url("/static/assets/fonts/bg.png");
}

button,
input,
select:focus {
    outline: none !important;
    border-color: #ccc !important;
    box-shadow: none !important;
}

.pointer {
    cursor: pointer;
}

.red {
    color: red;
}

.file-text {
	width: 440px;
  	height: 36px;
  	line-height: 36px;
  	margin-left: 118px;
}

.file-text>div {
    color: red;
    font-size: 12px;
    line-height: 24px;
}

.modal-box {
    width: 850px;
    margin-top: 7%;
}

.exit-box {
    width: 500px;
    margin-top: 12%;
}

.delete-group, .delete-h {
    color:#901616;
    position: relative;
    left: -20px;
    line-height: 30px;
}
