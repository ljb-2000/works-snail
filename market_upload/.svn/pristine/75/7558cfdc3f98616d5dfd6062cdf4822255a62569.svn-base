//接入校验封装
function commom_product(product_name,ftp_info,file_name) {
    if (!product_name.val().trim() || !ftp_info.val().trim() || !file_name.val().trim()) {
        jNotify("有未填写的输入项，请检查！");
        return false;
    }

    var arr = ftp_info.val().trim().split(',');
    if (arr.length != 4) {
        jNotify("资源ftp站点信息 格式错误，请检查！");
        return false;
    }

    var ip = arr[0];
    if (is_ip(ip) == false) {
        return false;
    }
}

