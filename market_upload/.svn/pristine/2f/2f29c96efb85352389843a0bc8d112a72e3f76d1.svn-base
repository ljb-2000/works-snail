def profile_upload(file):
    '''文件上传函数'''
    if file:
        path = settings.MEDIA_ROOT
        file_name = file.name
        file_path=os.path.join(path,file.name)
        fp = open(file_path, 'wb')
        for content in file.chunks(): 
            fp.write(content)
