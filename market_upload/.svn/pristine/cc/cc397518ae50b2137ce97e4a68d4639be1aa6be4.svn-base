import datetime
import os, errno
import logging
import traceback, json
from django.views.decorators.csrf import csrf_exempt
from django.shortcuts import HttpResponse
import settings


#logger = logging.getLogger("logger_utils")

@csrf_exempt
def file_upload(request):
    sdict = {'ret':0}
    sfile = request.FILES.get("Filedata",None)
    if sfile:
        file_name = sfile.name
        result =ftp_upload(sfile,file_name)
        if result:
            sdict['ret']= 1
            sdict['file_url']= 'http://dl.app.snail.com/snail_ad/'+file_name
    return HttpResponse(json.dumps(sdict), content_type="application/json")

def ftp_upload(sfile,file_name):
    '''文件上传ftp'''
    try:
        file_path=os.path.join(settings.MEDIA_ROOT, file_name)
        fp = open(file_path, 'wb')
        for content in sfile.chunks(): 
            fp.write(content)
        fp.close()
        return True
    except Exception,e:
        print e
        return False

@csrf_exempt
def download_file(request):   
    # Text file  
    response = HttpResponse()
    response['ContentType'] = 'text/plain'
    response['Content-Disposition'] = 'attachment; filename=links.txt'                
    response.write("http://dl.app.snail.com/snail_ad/")  
              
    return response