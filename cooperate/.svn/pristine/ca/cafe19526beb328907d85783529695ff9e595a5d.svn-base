                showAlert('jNotify', '请先选择上传文件！', true);

                return false;
            }

            $.ajax({
                    url: '/input/file_upload/',
                    type: 'POST',
                    processData : false,
                    contentType : false,
                    dataType: 'JSON',
                    data: formData
                })
                .done(function (data) {
