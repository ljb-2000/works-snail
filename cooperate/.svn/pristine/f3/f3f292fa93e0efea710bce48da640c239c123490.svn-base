$(function() {

    var vm = new Vue({
        el: '#task_box',
        data: {
            products: {}
        },
        methods: {
            getProducts: function() {
                this.products = {
                    active: 0,
                    data: [{
                        productName: 'xxx业务',
                        modules: [{
                            name: '研发',
                            status: true,
                            list: []
                        }, {
                            name: 'CB1',
                            status: false,
                            list: []
                        }, {
                            name: 'CBN',
                            status: false,
                            list: [] 
                        }, {
                            name: '不删档',
                            status:false,
                            list: [] 
                        }, {
                            name: 'OB',
                            status: false,
                            list: []
                        }]
                    }, {
                        productName: 'yyy业务',
                        modules: [{
                            name: '研发',
                            status: true,
                            list: []
                        }, {
                            name: 'CB1',
                            status: false,
                            list: []
                        }, {
                            name: 'CBN',
                            status: false,
                            list: [] 
                        }, {
                            name: '不删档',
                            status:false,
                            list: [] 
                        }, {
                            name: 'OB',
                            status: false,
                            list: []
                        }]
                    }]
                }
            },
            isActive: function (index) {
                this.products.active = index;
            },
            getStages: function(index) {
                var cur = this.products.active,
                    obj = this.products.data[cur];

                obj.modules[index].list = [
                    [{
                        time: '2016.01.16 - 2016.01.22',
                        content: '机器申请已到位，完成验收。',
                        percentage: '70%'
                    }, {
                        content: '服务端已完成搭建3个大区，待运营侧测试验收。',
                        percentage: '80%'
                    }, {
                        content: '登录器、gmcc、极效等周边环境已接入完成，待运营测试验收',
                        percentage: '90%'
                    }, {
                        content: '监控已接入，etl已接入',
                        percentage: '100%'
                    }]
                ];
            },
            activeModule: function (index) {
                var cur = this.products.active,
                    obj = this.products.data[cur],
                    len = obj.modules.length,
                    i;

                for (i = 0; i < len; i++) {
                    obj.modules[i].status = false;
                }

                obj.modules[index].status = true;
            }
        }
    });

    // 获取产品列表
    vm.getProducts();
});
