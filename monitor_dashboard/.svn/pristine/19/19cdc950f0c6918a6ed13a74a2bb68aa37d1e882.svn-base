.u-left {
    width: 285px;
    margin: 15px 0 0 15px;
}

.u-left .tab-content {
    overflow: auto;
    min-height: 540px;
    border-right: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    border-left: 1px solid #ddd;
    background: #FAFAFA;
    box-shadow: 0 2px 7px #D8D8D8;
}

.u-right {
    position: relative;
    margin: 18px 0 0 315px;
    box-shadow: 0 2px 7px #D8D8D8;
}

.u-left .tab-pane {
    padding: 20px 30px 0 30px;
}

.jstree-default .jstree-clicked {
    border-radius: none !important;
    background: #fff !important;
    box-shadow: none !important;
}

.u-left .nav-tabs > li > a {
    color: #787878;
}

.u-left .nav-tabs > li > a:hover {
    background-color: #f4f4f4;
}

.u-left .nav-tabs > li.active > a:hover {
    background-color: #FAFAFA;
}

.nav-tabs>li.active>a, .nav-tabs>li.active>a:focus, .nav-tabs>li.active>a:hover {
    background-color: #FAFAFA;
}

#m_fliter,
#u_fliter {
    height: 250px;
}

.u-right .table td, .u-right .table th, #lf_host_table td, #lf_host_table th, #lf_plot_table td, #lf_plot_table th {
    text-align: center;
    font-size: 12px;
    vertical-align: middle;
    word-break: break-all;
}

.c-box {
    padding: 30px 2%;
}

.c-highchart {
    float: left;
    width: 49%;
}

.c-highchart:nth-child(2n-1) {
    margin-right: 2%;
}

.check-now-true {
    background: #cfebff !important;
}

#m_charts_list {
    overflow: auto;
    height: 665px;
    padding: 30px 2%;
    background: #fff;
}

.date-area {
    font-size: 14px;
    width: 170px !important;
    height: 34px;
}

.c-form {
    height: 60px;
    padding: 1% 2% 0 2%;
    background: #f5f5f5;
}

.add-pannel {
    position: fixed;
    top: 0;
    right: 0;
    width: 260px;
    min-height: 600px;
    padding: 20px 0;
    border-left: 1px solid #ddd;
    background: #fff;
}

.add-pannel .tab-content {
    overflow: auto;
    padding: 0 20px;
}

.add-pannel .nav-tabs {
    padding: 0 20px;
}

.u-legend {
    font-size: 14px;
    line-height: 28px;
    height: 28px;
}

.left-menu {
    position: absolute;
    top: 30px;
    right: 20px;
    font-size: 16px;
    color: #333;
    cursor: pointer;
}

.left-menu-open {
    position: absolute;
    right: 23px;
    top: 10px;
    font-size: 16px;
    color: #555;
    cursor:pointer;
}

.u-legend span {
    cursor: pointer;
}

.delete {
    cursor:pointer;
}

.host-num, .plot-num {
    color:#a94442;
}

#u_jstree {
    max-height: 475px;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 20px 30px 0 30px;
    position: relative;
}

.u-left .tab-content .tab-pane:nth-child(2) {
    padding:0;
}

#u_jstree + .btn {
    width: 225px;
    margin-left: 30px;
}

.ip-txt-btn,.tree-confirm-btn {
    width: 225px;
    margin-left: 180px !important;
}

.jstree-node {
    overflow: hidden !important;
}

.ui-autocomplete {
    max-height: 200px;
    overflow-y: auto;
    overflow-x: hidden;
}

.lf-table {
    max-height: 500px;
    overflow-y: auto;
    display: block;
}

.dropdown-menu>li>a {
    cursor:pointer;
}

#query_table td, #query_table th, #query_plot_table td, #query_plot_table th {
    text-align: left !important;
}

#query_plot_table tr td:nth-child(1), #query_plot_table th:nth-child(1) {
    width:10%;
}

#query_plot_table tr td:nth-child(2), #query_plot_table th:nth-child(2) {
    width:90%;
}

.chart-table {
    table-layout: fixed;
}

.chart-table td {
    word-break:break-all;
}

.chart-table tr th, .chart-table tr td {
    text-align: center;
    vertical-align: middle !important;
}