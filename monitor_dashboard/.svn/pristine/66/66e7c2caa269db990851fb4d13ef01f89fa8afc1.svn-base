<form class="form-inline param-form">
    <div class="form-group">
        <label>时间跨度：</label>
        <select class="time-span form-control">
            <option value="-3600">1小时</option>
            <option value="-21600">6小时</option>
            <option value="-43200">12小时</option>
            <option value="-86400">24小时</option>
            <option value="-259200">3天</option>
            <option value="-604800">7天</option>
            <option value="-2592000">1个月</option>
        </select>
    </div>
    <div class="form-group">
        <label>采样方法：</label>
        <select class="show-type form-control">
            <option value="AVERAGE">AVERAGE</option>
            <option value="MAX">MAX</option>
            <option value="MIN">MIN</option>
        </select>
    </div>
    <div class="form-group">
        <label>求和：</label>
        <div class="sum-switch btn-group" data-toggle="buttons">
            <label class="btn btn-default active">
                <input type="radio" name="sum" data-value="off" autocomplete="off"> 否
            </label>
            <label class="btn btn-default ">
                <input type="radio" name="sum" data-value="on" autocomplete="off"> 是
            </label>
        </div>
    </div>
    <div class="form-group">
        <label>显示legend：</label>
        <div class="legend-switch btn-group" data-toggle="buttons">
            <label class="hide-legend btn btn-default active">
                <input type="radio" name="sum" autocomplete="off"> 否
              </label>
            <label class="show-legend btn btn-default ">
                <input type="radio" name="sum" autocomplete="off"> 是
            </label>
        </div>
    </div>
</form>
<div class="charts-wrap clearfix">

</div>
<div class="screen-tool-menu">
    <span class="glyphicon glyphicon-indent-right"></span>
</div>
<div class="screen-tool-bar">
    <span class="left-menu glyphicon glyphicon-indent-left"></span>
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#filter_tab" aria-controls="filter_tab" role="tab" data-toggle="tab">筛选</a></li>
    </ul>

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="filter_tab">
            <form>
                <input type="text" class="chart-search form-control" placeholder="请输入counter">
                <table class="screen-counter-table table table-hover table-striped">
                    <thead>
                        <tr>
                            <th width="50px">
                                <input class="chart-all-{{screen_id}} chart-all" type="checkbox" checked>
                            </th>
                            <th width="215px">标题名</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for chart_id in chart_id_list %}
                        <tr class="checknow">
                            <td>
                                <input class="chart-it-{{screen_id}} chart-it" type="checkbox" checked value="{{chart_id.0}}_{{chart_id.1}}_{{chart_id.2}}_{{chart_id.3}}">
                            </td>
                            <td>{{chart_id.0}}_{{chart_id.1}}_{{chart_id.2}}_{{chart_id.3}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <input class="chart-ids" type="hidden" value="{{g_id_str}}">
            </form>
        </div>
    </div>
</div>
<script>
    // 全选、全不选
    (function() {
        var checkedAll = ".chart-all-{{screen_id}}",
            checkedIt = ".chart-it-{{screen_id}}";

        checkAll(checkedAll, checkedIt);
    })();
</script>