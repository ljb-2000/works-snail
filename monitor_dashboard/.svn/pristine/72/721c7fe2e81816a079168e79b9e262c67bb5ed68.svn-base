    // 渲染各区域
    function showRoom(wrap, dataArr) {
        var $area = wrap.find('.status-left'),
            areaName;

        for (areaName in dataArr.area) {
            var areaData = dataArr.area[areaName];

            if (areaData.length) {
                setAreaHtml($area, areaName); // 渲染各区域table

                var obj = $area.find('.area-status[data-area="' + areaName +'"] table tbody'),
                    html = '';

                // 循环插入机房信息
                areaData.forEach(function (e) {
                    html += '<tr><td>' + e[0] + '</td><td class="text-danger">' + e[1] + '</td><td>' + e[2] + '</td></tr>';
                });

                obj.append(html);
            }
        }
    }

    // 渲染圆形统计图
    function showCircle(tabArr, dataArr) {
        var cpu = dataArr.percent.cpu,
            room = dataArr.percent.room,
            bgcpu,
            bgroom;

        cpu >= 60 ? bgcpu = '#d9534f' : bgcpu = '#3498DB';
        room >= 60 ? bgroom = '#d9534f' : bgroom = '#3498DB';

        $('#circle_cpu_' + tabArr).circliful({
            percent: cpu,
            foregroundColor: bgcpu
        });

        $('#circle_room_' + tabArr).circliful({
            percent: room,
            foregroundColor: bgroom
        });
    }

    function showCircle2(tabArr, dataArr) {
        var total = dataArr.percent.total,
            bgtotal;

        total >= 60 ? bgtotal = '#d9534f' : bgtotal = '#3498DB';

        $('#' + tabArr + '_chartline_3').circliful({
            percent: total,
            foregroundColor: bgtotal
        });
    }

    // 渲染状态异常
    function showErrorStatus(wrap, dataArr) {
        var data = dataArr.status;

        if (data.length) {
            data.forEach(function(e) {
                var obj = wrap.find('.timeline-item').eq(e.step - 1);

                obj.find('.timeline-icon').addClass('border-danger');

                e.module.forEach(function(i) {
                    var md = obj.find('.timeline-content[data-module="' + i.name + '"]');
                    
                    md.addClass('ani-danger').attr('data-content', i.tip);
                    md.find('.line').addClass('line-danger');
                });  
            });
        }

        wrap.find('.timeline-content').popover();
    }

    // 渲染实时信息
    function showStatusMsg(wrap, dataArr) {
        var html = '';

        if (dataArr.msg.length) {
            dataArr.msg.forEach(function(e, i) {
                html += '<tr>\
                    <td>' + parseInt(i + 1) + '</td>\
                    <td class="text-danger">' + e[0] + '</td>\
                    <td>' + e[1] + '</td>\
                </tr>';
            });
        } else {
            html = '<tr><td colspan="3">暂无信息</td></tr>'
        }

        wrap.find('.status-right table tbody').append(html);
    }
