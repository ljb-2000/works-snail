html,
body {
    font-family: Arial, "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", STHeiti, "Microsoft YaHei";
}

body {
    min-width: 1024px;
    background-color: #f8f8f8;
}

a {
   color: #005380;
}

a:active,
a:focus {
    outline: none !important;
}

ul {
    list-style: none;
}

input:focus,
select:focus,
textarea:focus {
    border-color: #ccc !important;
    box-shadow: none !important;
    outline: none !important;
}

button:focus {
    border-color: none !important;
    outline: none !important;
}

textarea {
    resize: none !important;
}

.form-control[disabled],
fieldset[disabled] .form-control {
    cursor: default !important;
}

.red {
    color: red;
}

.u-red {
    color: #d9534f;
}

.green {
    color: green;
}

.header {
    height: 50px;
    background: #33383E;
}

.h-logo {
    float: left;
    width: 100px;
    height: 50px;
}

.h-menu {
    float: left;
}

.h-menu li,
.h-tools > li {
    float: left;
    height: 50px;
}

.h-menu li a,
.h-tools > li > a {
    font-size: 14px;
    line-height: 50px;
    float: left;
    height: 50px;
    padding: 0 15px;
    text-align: center;
    text-decoration: none;
    color: #D2D2D2;
}

.h-menu li a:hover,
.h-tools > li > a:hover {
    background: #484644;
}

.h-menu a.active,
.h-menu a.active:hover {
    color: #BB6E13;
    background: #fff;
}

.h-nav {
    position: relative;
    height: 50px;
    padding-left: 100px;
    background: #fff;
    border-bottom: 1px solid #f5f5f5;
}

.h-nav > div > a {
    font-size: 14px;
    line-height: 50px;
    float: left;
    height: 50px;
    margin-right: 20px;
    text-align: center;
    text-decoration: none;
    color: #787878;
}

.line-active {
    background: #f90; 
    display: block; 
    height: 2px;
    position: absolute; 
    bottom:0; 
    left:100px;
}

.m0 {
    margin: 0 !important;
}

.m10 {
    margin: 10px !important;
}

.mt10 {
    margin-top: 10px;
}

.mt15 {
    margin-top: 15px;
}

.mt20 {
    margin-top: 20px;
}

.mt30 {
    margin-top: 30px;
}

.mb0 {
    margin-bottom: 0;
}

.mr10 {
    margin-right: 10px;
}

.mr35 { 
    margin-right: 35px;
}

.ml35 {
    margin-left: 35px;
}

.pl0 {
    padding-left: 0;
}

.pb0 {
    padding-bottom: 0;
}

.pd0 {
    padding: 0;
}

.form-inline .dataTables_wrapper {
    clear: none !important;
}

.checknow {
    background: #d9edf7 !important;
}

.table-striped>tbody>tr:nth-of-type(odd) {
    background-color: #e7e7e7;
}

.pointer {
    cursor: pointer;
    color: #005380;
}

/* 提示窗样式 */

.a-layout {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgb(0, 0, 0);
    z-index: 9998;
    opacity: 0.3;
    display: none;
}

.a-msg {
    position: absolute;
    min-width: 140px;
    padding: 10px;
    padding-left: 50px;
    margin: 15px;
    z-index: 9999;
    border-radius: 5px;
    display: none;
    cursor: pointer;
}

.jSuccess {
    color: #264409;
    background: #E6EFC2 url("../img/success.png") no-repeat 15px center;
    border: 1px solid #C6D880;
}

.jError {
    color: #8a1f11;
    background: #FBE3E4 url('../img/error.png') no-repeat 15px center;
    border: 1px solid #FBC2C4;
}

.jNotify {
    color: #35517c;
    background: #d8e6fc url('../img/info.png') no-repeat 15px center;
    border: 1px solid #a7c3f0;
}

.h-logo img:hover {
    animation: rotate 3s linear infinite;
    -webkit-animation: rotate 3s linear infinite;
    -moz-animation: rotate 3s linear infinite;
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
        transform: rotate(360deg);
    }
}

@-webkit-keyframes rotate {
    0% {
        transform: rotate(0deg);
        -webkit-transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

@-moz-keyframes rotate {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}