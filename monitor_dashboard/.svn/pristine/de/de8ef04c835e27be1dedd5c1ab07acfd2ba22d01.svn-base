html,
body {
    font-family: Arial, 'Microsoft YaHei' !important;
}

body {
    min-width: 1024px;
    background-color: #f8f8f8;
}

a:active,
a:focus {
    outline: none !important;
}

ul {
    list-style: none;
}

input:focus,
select:focus,
textarea:focus {
    border-color: #ccc !important;
    box-shadow: none !important;
    outline: none !important;
}

button:focus {
    border-color: none !important;
    outline: none !important;
}

textarea {
    resize: none !important;
}

.form-control[disabled],
fieldset[disabled] .form-control {
    cursor: default !important;
}

.red {
    color: red;
}

.u-red {
    color: #d9534f;
}

.green {
    color: green;
}

.header {
    height: 50px;
    background: #2a2a2a;
}

.h-logo {
    float: left;
    width: 100px;
    height: 50px;
}

.h-menu {
    float: left;
}

.h-menu li,
.h-tools > li {
    float: left;
    height: 50px;
}

.h-menu li a,
.h-tools > li > a {
    font-size: 14px;
    line-height: 50px;
    float: left;
    height: 50px;
    padding: 0 15px;
    text-align: center;
    text-decoration: none;
    color: #fff;
}

.h-menu li a:hover,
.h-tools > li > a:hover {
    background: #343434;
}

.h-menu a.active,
.h-menu a.active:hover {
    color: #f68500;
    background: #fff;
}

.h-nav {
    height: 50px;
    padding-left: 100px;
    background: #fff;
    box-shadow: 0 2px 7px #D8D8D8;
}

.h-nav > div > a {
    font-size: 14px;
    line-height: 50px;
    float: left;
    height: 50px;
    margin-right: 20px;
    text-align: center;
    text-decoration: none;
    color: #787878;
}

.h-nav > a:hover {
    color: #f68500;
}

.h-nav a.active {
    border-bottom: 2px solid #f90;
}

.mt10 {
    margin-top: 10px;
}

.mt15 {
    margin-top: 15px;
}

.mt20 {
    margin-top: 20px;
}

.mt30 {
    margin-top: 30px;
}

.mr10 {
    margin-right: 10px;
}

.ml35 {
    margin-left: 35px;
}

.pl0 {
    padding-left: 0;
}

.pb0 {
    padding-bottom: 0;
}

.form-inline .dataTables_wrapper {
    clear: none !important;
}

.checknow {
    background: #d9edf7 !important;
}

.table-striped>tbody>tr:nth-of-type(odd) {
    background-color: #e7e7e7;
}


/* 提示窗样式 */

.a-layout {
    width:100%;
    height:100%;
    position:fixed;
    top:0;
    left:0;
    background: rgb(0, 0, 0);
    z-index: 9998;
    opacity: 0.3;
    display: none;
}

.a-msg {
    position: absolute;
    min-width: 140px;
    padding: 10px;
    padding-left: 50px;
    margin: 15px;
    z-index: 9999;
    border-radius: 5px;
    display: none;
    cursor: pointer;
}

.jSuccess {
    color: #264409;
    background: #E6EFC2 url("../img/success.png") no-repeat 15px center;
    border: 1px solid #C6D880;
}

.jError {
    color: #8a1f11;
    background: #FBE3E4 url('../img/error.png') no-repeat 15px center;
    border: 1px solid #FBC2C4;
}

.jNotify {
    color: #35517c;
    background: #d8e6fc url('../img/info.png') no-repeat 15px center;
    border: 1px solid #a7c3f0;
}
